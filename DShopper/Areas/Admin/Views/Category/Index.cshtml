@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "Category List";
}
<h3>List Categories</h3>
<a class="btn btn-success" asp-action="Create" asp-controller="Category">Add New</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Slug</th>
            <th scope="col">Status</th>
            <th scope="col">Desc</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Slug</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Show</span>
                    }
                    else
                    {
                        <span class="text text-danger">Hide</span>
                    }
                </td>
                <td>@Html.Raw(@item.Description)</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger confirmDeletion" asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

